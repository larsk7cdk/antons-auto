@model antons_auto.mvc.ViewModels.CarModelViewModel

@{
    ViewData["Title"] = "Model";
}

<h1>Slet model</h1>

<h3>Er du sikker på du vil slette?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarBrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarBrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModelName)
